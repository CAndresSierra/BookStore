@model AppStore.Models.Dto.LibroListvm;

@{
    Layout = "_layout";
}


        <section class="search-bar">
          <form >
          <input type="text" placeholder="buscar libro">
          <button type="submit"><i class="fa fa-search"></i></button>
         </form>
        </section>


        <section class="movies">

          @foreach(var libro in Model.LibroList!)
          {
          <div class="movie-card"onclick="window.location.href='/Home/LibroDetail?libroId=@libro.Id'" >
            <div class="movie-image">
            <img src="/Uploads/@libro.Image" width="200" height="300" alt="@libro.Title">
            </div>
            <div class="movie-info">
                <h4>@libro.Title</h4>
                <h4>@libro.categoriasNames</h4>
                <h4>@libro.CreateDate</h4>
            </div>
           </div>
          }



           
         
        </section>


        <div class="pagination">

          <a href="#">&laquo;</a>

          @for(int i = 1; i < Model.TotalPages; i++)
         {
          <a class=@(Model.CurrentPage==i?"active":"false") href="/Home/Index?currentPage=@i">@i</a>
         }   

        </div>
    </div>
       
